  function between(x, min, max) {
    return x >= min && x <= max && x != "";
  }

  function update_fields() {
    $("#errors").text("");



    var flag = false

    var purchasePrice = $("#property_purchase_price").val();
    if ( !between(purchasePrice, 0, 99999999) ) {
      $("#errors").append("Purchase price must be between 0 and 99,999,999<br />");
      flag = true;
    }
    
    var loanAmount = $("#property_loan_amount").val();
    if ( !between(loanAmount, 0, 99999999) ) {
      $("#errors").append("Loan amount must be between 0 and 99,999,999<br />");
      flag = true;
    }


    if (flag) {
      return
    }

    //var value = $("#interest-only-yes").is(":checked");
    //alert(value);

    
    //alert("no errors, send ajax")


    $("#down-payment-value").text("40.0");


    // if no errors then send ajax req to update db 
   
    // $("input[name=test]").is(":checked");

    //.toString();
  }


  //setup onchange and onkeyup to call updatefields when value has changed
  document.getElementById("property_purchase_price").onchange = update_fields
  document.getElementById("property_purchase_price").onkeyup = update_fields

  document.getElementById("property_loan_amount").onchange = update_fields
  document.getElementById("property_loan_amount").onkeyup = update_fields

  document.getElementById("property_interest_rate").onchange = update_fields
  document.getElementById("property_interest_rate").onkeyup = update_fields

  document.getElementById("interest-only-yes").onchange = update_fields

  document.getElementById("interest-only-no").onchange = update_fields

  document.getElementById("property_amortization").onchange = update_fields
  document.getElementById("property_amortization").onkeyup = update_fields

  document.getElementById("property_income").onchange = update_fields
  document.getElementById("property_income").onkeyup = update_fields

  document.getElementById("property_expenses").onchange = update_fields
  document.getElementById("property_expenses").onkeyup = update_fields


</script>







