<script language="JavaScript">
  function between(x, min, max) {
    return x >= min && x <= max && x != "";
  }

  function update_fields() {
    $("#errors").text("");

    //check for errors - start

    var flag = false

    var purchasePrice = $("#property_purchase_price").val();
    if ( !between(purchasePrice, 0, 99999999) ) {
      $("#errors").append("Purchase price must be between 0 and 99,999,999<br />");
      flag = true;
    }
    
    var loanAmount = $("#property_loan_amount").val();
    if ( !between(loanAmount, 0, 99999999) ) {
      $("#errors").append("Loan amount must be between 0 and 99,999,999<br />");
      flag = true;
    }

    var interestRate = $("#property_interest_rate").val();
    if ( !between(interestRate, 0, 100) ) {
      $("#errors").append("Interest rate must be between 0 and 100<br />");
      flag = true;
    }

    var amortization = $("#property_amortization").val();
    if ( !between(amortization, 0, 100) ) {
      $("#errors").append("Amortization must be between 0 and 100<br />");
      flag = true;
    }

    var income = $("#property_income").val();
    if ( !between(income, 0, 99999999) ) {
      $("#errors").append("Income amount must be between 0 and 99,999,999<br />");
      flag = true;
    }

    var expenses = $("#property_expenses").val();
    if ( !between(expenses, 0, 99999999) ) {
      $("#errors").append("Expenses amount must be between 0 and 99,999,999<br />");
      flag = true;
    }

    if (flag) {
      return;
    }

    //check for errors - end

    var data = $("#property-form").serializeJSON();

    var success = function (data) {

      var netOperatingIncome = data["net_operating_income"];
      var debtService = data["debt_service"];
      var cashFlow = data["cash_flow"];
      var cashOnCash = data["cash_on_cash"];
      var capRate = data["cap_rate"];
      var downPayment = data["down_payment"];
      var loanToValue = data["loan_to_value"];
      var dscr = data["dscr"];

      $("#purchase-price-span").text(purchasePrice);
      $("#loan-amount-span").text(loanAmount);
      $("#interest-rate-span").text(interestRate);
      $(".net-operating-income-span").text(netOperatingIncome);
      $("#debt-service-span").text(debtService);
      $("#cash-flow-span").text(cashFlow);
      $("#cash-on-cash-span").text(cashOnCash);
      $(".cap-rate-span").text(capRate);
      $("#down-payment-span").text(downPayment);
      $("#loan-to-value-span").text(loanToValue);
      $("#dscr-span").text(dscr);
    };

    $.ajax({
      type: "PUT",
      url: "<%= api_property_url(@property) %>",
      data: data,
      success: success,
      dataType: "json"
    });

  }


  //setup onchange and onkeyup to call updatefields when value has changed
  document.getElementById("property-form").onchange = update_fields;
  document.getElementById("property-form").onkeyup = update_fields;

  update_fields();

</script>







