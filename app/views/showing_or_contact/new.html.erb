<center><h1>Add Contact or Showing</h1>

<form action="<%= showing_or_contact_create_contact_url %>" method="post">

  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">
<br>

Select New Listing Contact or Showing<br>
<input type="radio" name="contact[contact_or_showing]" value="contact" checked> Contact&nbsp;&nbsp;&nbsp;
    <input type="radio" name="contact[contact_or_showing]" value="showing"> Showing


<br><br>Select Property<br>
<select name="contact[property_id]">
  <% @properties.each do |property| %>
    <option value="<%= property.id %>"><%= property.address %> <%= property.floor %> Floor</option>
  <% end %>
</select>

<br><br>

  <input
    class="add-showing-input"
    id="contact_name"
    name="contact[name]"
    type="text"
    placeholder="Name">
  <br>

  <input
    class="add-showing-input"
    id="contact_title"
    name="contact[title]"
    type="text"
    placeholder="Title">
  <br>

  <input
    class="add-showing-input"
    id="contact_email"
    name="contact[email]"
    type="text"
    placeholder="Email">
  <br>

  <input
    class="add-showing-input"
    id="contact_company"
    name="contact[company]"
    type="text"
    placeholder="Company">
  <br>

  <input
    class="add-showing-input"
    id="contact_phone"
    name="contact[phone]"
    type="text"
    placeholder="Phone">
  <br><br>


  <input type="submit" value="Submit" class="btn btn-default">
</form>

<br><br><br><br></center>